<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf8" />
    <meta name='viewport' content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <link href='/assets/styles.css' type='text/css' rel="stylesheet" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src='/assets/todo-list.js' type="text/javascript"></script>
  </head>
  <body>
    <h1>Todo App</h1>
    <div id='todo-table'>
      <form>
        <input type='text' name="item" placeholder='Add Chore...' required />
        <button type='submit'>Add Item</button>
      </form>
      <ul>
        <% todos.map((item) => { %>
          <li><%= item.item %></li>
        <% }) %>
      </ul>
    </div>
  </body>
</html>